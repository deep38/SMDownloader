<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="100">

    <set android:duration="50">
        <scale
            android:fromXScale="100%"
            android:fromYScale="100%"
            android:toXScale="97%"
            android:toYScale="97%"
            android:pivotX="50%"
            android:pivotY="50%"/>
    </set>

    <set android:startOffset="50" android:duration="50">
        <scale
            android:fromXScale="97%"
            android:fromYScale="97%"
            android:toXScale="100%"
            android:toYScale="100%"
            android:pivotX="50%"
            android:pivotY="50%" />
    </set>
</set>